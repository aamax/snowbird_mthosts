<h1>Snowbird Mountain Host: Shifts</h1>

<div class="shift_page_header">
  <div class="shift_page_filter">
    <%= will_paginate @shifts %>
    <div class='row'>
      <div class='span4'>
        <% if current_user.has_role? :admin %>
            <button type="button" class="btn" data-toggle="collapse" data-target="#stats_display" >
              Open Stats:&nbsp;&nbsp;<i class='icon-collapse icon-large icon-white'></i>
            </button>
        <% end %>
        <button type="button" class="btn" data-toggle="collapse" data-target="#shift_filter" >
          Open Filter:&nbsp;&nbsp;<i class='icon-collapse icon-large icon-white'></i>
        </button>
      </div>
      <div class='span5'>
        <% unless current_user.supervisor? %>
            <%= render "/users/shift_message", :user => current_user, :shift_page => true %>
        <% end %>
      </div>
    </div>
    <% if current_user.has_role? :admin %>
        <div id="stats_display" class="collapse out">
          <h4>Shift Stats:</h4>
          Total Shifts:  <%= Shift.all.length %><br/>
          Open Shifts:   <%= Shift.un_assigned.length %><br/>
          Assigned Shifts:   <%= Shift.assigned.length %><br/>
        </div>
    <% end %>
    <div id="shift_filter" class="collapse out">
      <%= render "shifts/filter/shift_filter_form" %>
    </div>
  </div>
</div>
<br/>

<%
   curr_date = ""
%>
<div class="shift_page_body">
    <% @shifts.each do |s| %>
      <% if curr_date != s.shift_date  %>
           <% if curr_date != ''  %>
              </table>
              </div>
           <% end %>

            <button type="button" class="btn btn shift_button" data-toggle="collapse"
              data-target=<%= "#date_#{curr_date}" %>>
                <%="#{s.shift_date.strftime("%a")} - #{s.shift_date} &nbsp;&nbsp;-&nbsp;&nbsp;Total: #{getShiftTotal(s.shift_date)} / Available: #{getSelectedShifts(s.shift_date)}".html_safe %>
            </button>
          <br/>

            <div id='<%= "date_#{curr_date}" %>' class="collapse out">
          <table class='table table-striped'>
            <tr >
              <th>Host</th>
              <th>Select/Drop</th>
              <th>Code</th>
              <th>Description</th>
              <th>Start Time</th>
              <th>End Time</th>
              <th>Notes</th>
              <th>Admin</th>
            </tr>
      <% end %>
      <tr>
        <td>
          <% unless s.user_id.nil? %>
            <a href=<%= user_path(s.user_id) %>><%= s.user.name %></a>
          <% else %>
            &nbsp;&nbsp;
          <% end %>
        </td>
        <td class="align-left">
          <% if s.can_select(current_user) && !current_user.supervisor? %>
            <a href=<%= "select_shift/#{s.id}" %>><i class="icon-male btn btn-primary" title="select shift">&nbsp;&nbsp;Select</i></a>
          <% end %>
          <% if s.can_drop current_user %>
            <a href=<%= "drop_shift/#{s.id}" %>><i class="icon-warning-sign btn btn-warning" title="drop shift">&nbsp;&nbsp;Drop</i></a>
          <% end %>
        </td>
        <td class="align-center"><a href="shiftcard" target='_blank'><%= s.shift_type.short_name[0..1] %></a></td>
        <td><a href="shiftcard" target='_blank'><%= s.shift_type.description %></a></td>
        <td class="align-center"><%= s.shift_type.start_time %></td>
        <td class="align-center"><%= s.shift_type.end_time %></td>
        <td><%= s.shift_type.tasks %></td>
        <td class="align-center">
          <% if current_user.has_role? :admin %>
              <a href=<%= edit_shift_path(s.id) %>><i class="icon-wrench btn btn-info" title="edit shift"></i></a>

              <%= link_to "<i class='icon-trash btn btn-danger'></i>".html_safe, s, :method => :delete,
                          :confirm => "You sure you want to delete this shift?",
                          :title => "Delete #{s.id}" %>
          <% end %>

        </td>
      </tr>
      <% if curr_date != s.shift_date  %>
            <% curr_date = s.shift_date %>
      <% end %>
    <% end %>

    <% if @shifts.length > 0 %>
      </table>
    </div>
  <% end %>
</div>
<br/>






<div class="shift_page_footer">
  <hr/>
  <%= will_paginate @shifts %>
</div>

