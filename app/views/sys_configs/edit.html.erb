<h1>System Administration</h1>
<div class="row">
  <div class="span6">
    <%= form_for @sys_config, url: {action: "update", method: :put}, html: {class: "nifty_form"} do |f| %>
      <div class='row'>
        <table class='table table-striped table-bordered span5'>
          <tr>
            <td>
              <strong>Season/Rookie Year: </strong>
            </td>
            <td>
              <%= f.text_field :season_year, :placeholder => 'Start year' %>
            </td>
          </tr>

          <tr>
            <td>
              <strong>Seniors (Group 1): </strong>
            </td>
            <td>
              <%= f.text_field :group_1_year, :placeholder => 'Group 1/Seniors' %>
            </td>
          </tr>

          <tr>
            <td>
              <strong>Juniors (Group 2): </strong>
            </td>
            <td>
              <%= f.text_field :group_2_year, :placeholder => 'Group 2/Juniors' %>
            </td>
          </tr>

          <tr>
            <td>
              <strong>Freshmen (Group 3): </strong>
            </td>
            <td>
              <%= f.text_field :group_3_year, :placeholder => 'Group 3/Freshmen' %>
            </td>
          </tr>

          <tr>
            <td>
              <strong>Season Start Date: </strong>
            </td>
            <td>
              <%= f.text_field :season_start_date, :placeholder => 'Season Start Date' %>
            </td>
          </tr>
          <tr>
            <td>
              <strong>Bingo Start Date: </strong>
            </td>
            <td>
              <%= f.text_field :bingo_start_date, :placeholder => 'Bingo Start Date' %>
            </td>
          </tr>
          <tr>
            <td>
              <strong>Shift Page Item Count: </strong>
            </td>
            <td>
              <%= f.text_field :shift_count, :placeholder => 'Number of Shifts to show on Selection Page' %>
            </td>
          </tr>
        </table>
      </div>
      <hr/>
      <%= f.submit "Update", class: 'btn btn-success' %>
      <%= link_to "Cancel", root_path, class: "btn btn-warning" %>
    <% end %>

  </div>
  <div class="span6 well">
    <% if current_user.admin? %>
      <h3>Variables</h3>
        ENVIRONMENT: <%= Rails.env %><br/>
        GMAIL USER: <%= ENV['GMAIL_USERNAME'] %><br/>
    <% end %>
  </div>
</div>
