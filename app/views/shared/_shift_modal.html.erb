<div ng-controller='ShiftModalCtrl'>
  <div id="shift_modal_section">

    <div class="edit_shift_modal modal hide fade" id="editShiftModal">
      <div class='modal-header'>
        <h1>Shift Editor</h1>
      </div>
      <div class="modal-body">
        {{ setupShift(true) }}
        <strong>Short Name:</strong>

        <!--json.user_id                s.user.id-->
        <!--json.user_name              s.user.name-->
        <!--json.shift_type_id          s.shift_type.id-->
        <!--json.shift_type_short_name  s.shift_type.short_name-->
        <!--json.shift_type_description s.shift_type.description-->
        <!--json.shift_status           s.shift_status-->
        <!--json.shift_date             s.shift_date-->
        <!--json.day_of_week            s.day_of_week-->



        <input type="text" ng-model="shift.short_name" placeholder="Short Name" class='short_name_edit' required ng-disabled='showForm'/> <br/>
        <strong>Description:</strong>
        <input type="text" ng-model="shiftType.description" placeholder="Description" class='description_edit' required ng-disabled='showForm'/> <br/>
        <strong>Start Time:</strong>
        <input type="text" ng-model="shiftType.start_time" placeholder="Start Time" class='start_time_edit' required ng-disabled='showForm'/> <br/>
        <strong>End Time:</strong>
        <input type="text" ng-model="shiftType.end_time" placeholder="End Time" class='end_time_edit' required ng-disabled='showForm'/> <br/>
        <strong>Notes:</strong>
        <input type="text" ng-model="shiftType.tasks" placeholder="Notes" class='tasks_edit' required ng-disabled='showForm'/> <br/>

        <hr/>
        <button type="button" class="btn btn-small btn-warning" ng-click="dismiss('cancel')">Cancel</button>
        <button class="btn btn-small btn-success" ng-click="dismiss('ok')" ng-disabled='showForm' >Save
        </button>

      </div>
    </div>
  </div>
</div>
