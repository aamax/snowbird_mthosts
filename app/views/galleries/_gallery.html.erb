<div class="gallery" id="<%= gallery.id %>">
  <div class="front">
    <%= link_to gallery, class: 'pic-link' do %>
        <%= link_to image_tag(gallery.pic.url(:thumb)), gallery, :title => gallery.name %>
    <% end %>
  </div>

  <div class="back">
    <span class="gallery-name"><%= gallery.name %></span>
    <div class="actions">
      <% if (gallery.user_id == current_user) || (current_user.has_role? :admin) %>
      <%= link_to 'Edit', edit_gallery_path(gallery) %>
      <%= link_to 'Delete', gallery, confirm: 'Are you sure you want to delete this picture?', method: :delete, class: 'destroy' %>
      <% end %>
    </div>
  </div>
</div>