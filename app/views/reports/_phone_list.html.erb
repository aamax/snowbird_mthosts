<h1><%= @title %></h1>

<%= link_to "Export List", "/reports/phone_list.csv" %>
<br/><br/>

<table class="table table-striped">
  <tr>
    <th>First</th>
    <th>Last</th>
    <th>Mobile</th>
    <th>Home</th>
    <th>Mailing</th>
    <th>Email</th>
    <th>Rookie?</th>
  </tr>

  <% @user_list.each do |u| %>
    <tr>
        <td>
            <%= u.first_name %>
        </td>

        <td>
            <%= u.last_name %>
        </td>

        <td>
          <%= number_to_phone(u.cell_phone) %>
        </td>

        <td>
          <%= number_to_phone(u.home_phone) %>
        </td>

        <td>
          <%= "#{u.address}" %>
        </td>

        <td>
          <%= u.email %>
        </td>

        <td>
          <%= u.rookie? ? "YES" : "" %>
        </td>
    </tr>
  <% end %>
</table>