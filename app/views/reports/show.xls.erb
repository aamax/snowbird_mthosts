<table class="table table-striped table-bordered">
  <tr class="row">
    <th class="col-sm-3 col-md-3">Name</th>
    <th class="col-sm-1 col-md-1">Total</th>
    <th class="col-sm-1 col-md-1">Worked</th>
    <th class="col-sm-1 col-md-1">Pending</th>
    <th class="col-sm-1 col-md-1">Missed</th>
    <th class="col-sm-5 col-md-5">Comments</th>
  </tr>
  <% @hosts.each do |object| %>
      <tr class="row" >
        <td>
          <%= object.name %> (seniority: <%= object.seniority %> )
        </td>
        <td><%= object.shifts.count %> </td>
        <td><%= object.shifts_worked.count %></td>
        <td><%= object.pending_shifts.count %></td>
        <td><%= object.missed_shifts.count %></td>
        <td><%= object.notes %></td>
      </tr>
  <% end %>
</table>