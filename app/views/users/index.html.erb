<h1>Snowbird Mountain Hosts</h1>
<div class="row">
<% if current_user.has_role? :admin %>
      <div class="span2">
    <%= link_to "Create User <i class='icon-male icon-large icon-white'></i>".html_safe, new_user_path, class: "btn btn-info" %>
    <br/>
        Rookies: <%= User.rookies.length %> <br/>

        Freshmen: <%= User.group1.length %> <br/>

        Junior: <%= User.group2.length %> <br/>

        Senior: <%= User.group3.length %> <br/>
      </div>
  <% end %>
      <div class='span9'>
        <input type="text" id='user_search_box' class="span3 search-query" placeholder="User Filter">
      </div>
    </div>
<hr/>
<table class='table table-striped'>
  <tbody>
  <tr>
    <%= render 'user_index_entry', object: current_user %>
  </tr>

  <% @users.each do |u| %>
    <% next if u == current_user %>
  <tr id=<%= "user_record_#{u.id}" %> class='user_entry' >
    <%= render 'user_index_entry', object: u %>
  </tr>
  <% end %>
  </tbody>
</table>


