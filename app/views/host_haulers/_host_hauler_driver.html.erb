<div class="well">
  <strong>DRIVER: </strong>
  &nbsp;&nbsp;
  <% if @driver.nil? %>
    ** UNSET **
  <% else %>
    <br/>
    <%= @driver.name %>
    <br/>
    HOME PHONE:
    <%= @driver.home_phone %><br/>
    CELL PHONE:
    <%= @driver.cell_phone %><br/><br/>
    <% if current_user.admin? %>
      <a href="/drop_driver/<%= @selected_hauler.id %>" class='hauler_edit_btn btn btn-danger'>Drop</a>
    <% end %>
  <% end %>
  &nbsp;&nbsp;
  <%= @selected_hauler.driver_admin_button(current_user) %>

  <% if current_user.admin? %>
    <a href="/set_driver_to_host/<%= @selected_hauler.id %>" class="hauler_edit_btn btn btn-info">
      <i class="icon-wrench"></i>
    </a>
  <% end %>
</div>
