<h3>Meeting Schedule</h3>
<div class="row">
  <div class="span6">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th>Rookies</th>
        <th>Returning Hosts</th>
      </tr>

      <% ShiftType.meetings.each do |meeting| %>
        <tr>
          <td><%= meeting.description %></td>
          <td><%= MEETINGS[meeting.short_name] %></td>
          <td><%= ['M1', 'M3'].include?(meeting.short_name) ? 'yes' : '' %></td>
          <td><%= ['M2', 'M4'].include?(meeting.short_name) ? 'yes' : '' %></td>
        </tr>

      <% end %>
    </table>
  </div>
</div>

