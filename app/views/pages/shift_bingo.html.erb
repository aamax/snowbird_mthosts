<h3>Meeting Schedule</h3>
<div class="row">
  <div class="span6">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Description</th>
        <th>Date</th>
        <th>Rookies</th>
        <th>Returning Hosts</th>
      </tr>

      <% MEETINGS.each do |meeting| %>
        <tr>
          <td>
            <%= meeting[:what] %>
          </td>
          <td>
            <%= meeting[:when] %>
          </td>
          <td>
            <%= meeting[:who] == :rookie ? "yes" : "" %>
          </td>
          <td>
            <%= meeting[:who] == :all ? "yes" : "" %>
          </td>
        </tr>
      <% end %>

    </table>
  </div>
</div>

  <div class="row">
	<div class="span12">
