<h1>Survey Records For <%= @user.name %></h1>
<%= link_to "Surveys", surveys_path, :class => "btn btn-success btn-large" %>
<% tot = 0 %>

<% if @surveys.count == 0 %>
    <h3>No Survey Data Available...</h3>
<% else %>
    <div class='user_survey_table'>
    <table class='table table-striped table-bordered'>
      <tr>
        <% @surveys.each do |s| %>
            <th><%= s.date.strftime('%Y%m%d') %></th>
        <% end %>
        <th>Total</th>
      </tr>

      <tr>
        <% @surveys.each do |s| %>
            <td>
              <a href='<%= s.id %>/edit' title='Edit Survey Entry'>
                  <%= tot += s.type1
                      s.type1 %>
              </a>
              &nbsp;&nbsp;

              <a href='/surveys/<%= s.id %>/edit'> <i class='icon-wrench icon-large'></i> </a>
              &nbsp;&nbsp;
              <%= link_to "<i class='icon-trash icon-large'></i>".html_safe, s, :method => :delete,
                          :confirm => "You sure you want to delete this survey entry?",
                          :title => "Delete Survey Count On #{s.date.strftime('%Y-%m-%d')}" %>
            </td>
        <% end %>
        <td>
          <%= tot %>
        </td>
      </tr>
    </table>
    </div>
<% end %>